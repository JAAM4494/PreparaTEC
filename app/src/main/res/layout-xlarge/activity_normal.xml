
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/button1"
        android:layout_width="670dp"
        android:layout_height="90dp"
        android:background="@drawable/cust_pregunta"
        android:text="opcion1"
        android:textColor="#414042"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="710dp"
        android:layout_height="360dp"
        android:gravity="center"
        android:text="En un local comercial, por la compra de un artículo A que cuesta $50 000, se le ofrece un descuento del 7% y, por la de un artículo B con valor de $30 000, se le ofrece un descuento del 5%. Sin embargo, en una promoción, si se compran los dos artículos juntos, se ofrece un descuento del 10% sobre el monto total"
        android:textSize="33dp"
        android:textColor="#414042"
        android:height="500dp"
        android:layout_below="@+id/tNormal"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="670dp"
        android:layout_height="90dp"
        android:background="@drawable/cust_pregunta"
        android:text="opcion2"
        android:textColor="#414042"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginTop="10dp"
        android:textSize="35dp"
        android:layout_alignParentEnd="false" />

    <Button
        android:id="@+id/button3"
        android:layout_width="670dp"
        android:layout_height="90dp"
        android:background="@drawable/cust_pregunta"
        android:text="opcion3"
        android:textColor="#414042"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="35dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="670dp"
        android:layout_height="90dp"
        android:background="@drawable/cust_pregunta"
        android:text="opcion4"
        android:textColor="#414042"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="35dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="670dp"
        android:layout_height="90dp"
        android:background="@drawable/cust_pregunta"
        android:text="opcion5"
        android:textColor="#414042"
        android:textSize="35dp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="185dp"
        android:layout_height="70dp"
        android:text="Práctica"
        android:id="@+id/tNormal"
        android:textColor="#161638"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

</RelativeLayout>
